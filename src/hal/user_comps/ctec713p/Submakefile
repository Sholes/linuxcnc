
ifeq ($(LIBMODBUS3_USABLE),yes)

CTEC713P_SRCS = hal/user_comps/ctec713p/ctec713p.c
CTEC713P_CFLAGS = -DDEBUG $(LIBMODBUS_CFLAGS)
CTEC713P_LIBS = $(LIBMODBUS_LIBS) -lm

$(call TOOBJSDEPS, $(VFDB_SRCS)) : EXTRAFLAGS += $(VFDB_CFLAGS)

USERSRCS += $(VFDB_SRCS)
../bin/ctec713p: $(call TOOBJS, $(VFDB_SRCS)) ../lib/liblinuxcnchal.so.0 ../lib/liblinuxcncini.so.0
	$(ECHO) Linking $(notdir $@)
	$(Q)$(CC) $(LDFLAGS) -o $@ $^ $(VFDB_LIBS) 

TARGETS += ../bin/ctec713p
endif

